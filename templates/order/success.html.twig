{% extends 'base.html.twig' %}

{% block title %}Order Confirmation{% endblock %}

{% block body %}
    <div class="container">
        <div class="row justify-content-center">
            <div class="col-md-8">
                <div class="card shadow-sm mb-4">
                    <div class="card-header bg-success text-white">
                        <h3 class="text-center mb-0">Order Confirmed!</h3>
                    </div>
                    <div class="card-body p-4 text-center">
                        <div class="mb-4">
                            <i class="bi bi-check-circle-fill text-success" style="font-size: 4rem;"></i>
                        </div>
                        
                        <h4>Thank you for your order!</h4>
                        <p class="lead">Your order has been placed and is being processed.</p>
                        
                        <div class="alert alert-info mb-4">
                            <strong>Order Reference:</strong> {{ order.reference }}
                        </div>
                        
                        <p>A confirmation email has been sent to your email address. You can also view your order details in your account.</p>
                        
                        <div class="d-flex justify-content-center gap-3 mt-4">
                            <a href="{{ path('app_order_details', {'reference': order.reference}) }}" class="btn btn-primary">View Order Details</a>
                            <a href="{{ path('app_home') }}" class="btn btn-outline-secondary">Return to Home</a>
                        </div>
                    </div>
                </div>
                
                <div class="card">
                    <div class="card-header">
                        <h5 class="mb-0">Order Summary</h5>
                    </div>
                    <div class="card-body">
                        <div class="table-responsive">
                            <table class="table">
                                <thead>
                                    <tr>
                                        <th>Product</th>
                                        <th>Quantity</th>
                                        <th class="text-end">Price</th>
                                    </tr>
                                </thead>
                                <tbody>
                                    {% for item in order.orderItems %}
                                        <tr>
                                            <td>{{ item.product.name }}</td>
                                            <td>{{ item.quantity }}</td>
                                            <td class="text-end">€{{ item.subtotal|number_format(2, '.', ',') }}</td>
                                        </tr>
                                    {% endfor %}
                                </tbody>
                                <tfoot>
                                    <tr>
                                        <th colspan="2" class="text-end">Total:</th>
                                        <th class="text-end">€{{ order.totalPrice|number_format(2, '.', ',') }}</th>
                                    </tr>
                                </tfoot>
                            </table>
                        </div>
                    </div>
                </div>
            </div>
        </div>
    </div>
{% endblock %}
