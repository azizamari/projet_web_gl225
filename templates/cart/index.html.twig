{% extends 'base.html.twig' %}

{% block title %}Your Shopping Cart{% endblock %}

{% block body %}
    <div class="container">
        <h1 class="mb-4">Your Shopping Cart</h1>
        
        {% if cart is not null and cart.cartItems is defined and cart.cartItems.count > 0 %}
            <div class="row">
                <div class="col-lg-8">
                    <div class="card mb-4">
                        <div class="card-header">
                            <h5 class="mb-0">Cart Items</h5>
                        </div>
                        <div class="card-body">
                            <div class="table-responsive">
                                <table class="table table-hover">
                                    <thead>
                                        <tr>
                                            <th scope="col">Product</th>
                                            <th scope="col">Price</th>
                                            <th scope="col">Quantity</th>
                                            <th scope="col">Subtotal</th>
                                            <th scope="col">Actions</th>
                                        </tr>
                                    </thead>
                                    <tbody>
                                        {% for item in cart.cartItems %}
                                            <tr>
                                                <td>
                                                    <div class="d-flex align-items-center">
                                                        <div class="flex-shrink-0" style="width: 60px;">
                                                            {% if item.product.imageFilename %}
                                                                <img src="{{ asset('uploads/products/' ~ item.product.imageFilename) }}" alt="{{ item.product.name }}" class="img-fluid rounded">
                                                            {% else %}
                                                                <div class="text-center p-2 bg-light rounded">
                                                                    <i class="bi bi-disc" style="font-size: 1.5rem;"></i>
                                                                </div>
                                                            {% endif %}
                                                        </div>
                                                        <div class="ms-3">
                                                            <a href="{{ path('app_product_show', {'id': item.product.id}) }}" class="text-decoration-none">
                                                                <h6 class="mb-0">{{ item.product.name }}</h6>
                                                            </a>
                                                            {% if item.product.artist %}
                                                                <p class="small text-muted mb-0">{{ item.product.artist }}</p>
                                                            {% endif %}
                                                        </div>
                                                    </div>
                                                </td>
                                                <td>€{{ item.product.price|number_format(2, '.', ',') }}</td>
                                                <td>
                                                    <form action="{{ path('app_cart_update', {'id': item.id}) }}" method="post" class="quantity-form">
                                                        <input type="hidden" name="_token" value="{{ csrf_token('update-item-' ~ item.id) }}">
                                                        <div class="input-group input-group-sm" style="width: 100px;">
                                                            <button class="btn btn-outline-secondary decrement-qty" type="button">-</button>
                                                            <input type="number" name="quantity" class="form-control text-center" value="{{ item.quantity }}" min="1" max="{{ item.product.stock }}">
                                                            <button class="btn btn-outline-secondary increment-qty" type="button">+</button>
                                                            <button type="submit" class="d-none">Update</button>
                                                        </div>
                                                    </form>
                                                </td>
                                                <td>€{{ item.subtotal|number_format(2, '.', ',') }}</td>
                                                <td>
                                                    <a href="{{ path('app_cart_remove', {'id': item.id}) }}" class="btn btn-sm btn-outline-danger">
                                                        <i class="bi bi-trash"></i>
                                                    </a>
                                                </td>
                                            </tr>
                                        {% endfor %}
                                    </tbody>
                                </table>
                            </div>
                        </div>
                    </div>
                </div>
                
                <div class="col-lg-4">
                    <div class="card mb-4">
                        <div class="card-header">
                            <h5 class="mb-0">Order Summary</h5>
                        </div>
                        <div class="card-body">
                            <div class="d-flex justify-content-between mb-3">
                                <span>Subtotal</span>
                                <span>€{{ cart.totalPrice|number_format(2, '.', ',') }}</span>
                            </div>
                            <div class="d-flex justify-content-between mb-3">
                                <span>Shipping</span>
                                <span>{% if cart.totalPrice >= 75 %}Free{% else %}€4.99{% endif %}</span>
                            </div>
                            <hr>
                            <div class="d-flex justify-content-between mb-3">
                                <strong>Total</strong>
                                <strong>€{{ cart.totalPrice >= 75 ? cart.totalPrice : cart.totalPrice + 4.99 }}</strong>
                            </div>
                            
                            <div class="d-grid gap-2">
                                <a href="{{ path('app_cart_checkout') }}" class="btn btn-primary">Proceed to Checkout</a>
                                <a href="{{ path('app_products') }}" class="btn btn-outline-secondary">Continue Shopping</a>
                            </div>
                        </div>
                    </div>
                </div>
            </div>
        {% else %}
            <div class="text-center py-5">
                <i class="bi bi-cart-x" style="font-size: 4rem;"></i>
                <h3 class="mt-3">Your cart is empty</h3>
                <p>Looks like you haven't added any items to your cart yet.</p>
                <a href="{{ path('app_products') }}" class="btn btn-primary mt-3">Start Shopping</a>
            </div>
        {% endif %}
    </div>
{% endblock %}

{% block javascripts %}
    {{ parent() }}
    <script>
        document.addEventListener('DOMContentLoaded', function() {
            document.querySelectorAll('.decrement-qty').forEach(function(button) {
                button.addEventListener('click', function() {
                    const input = this.parentNode.querySelector('input');
                    let value = parseInt(input.value);
                    if (value > 1) {
                        input.value = value - 1;
                        this.closest('form').submit();
                    }
                });
            });
            
            document.querySelectorAll('.increment-qty').forEach(function(button) {
                button.addEventListener('click', function() {
                    const input = this.parentNode.querySelector('input');
                    let value = parseInt(input.value);
                    let max = parseInt(input.getAttribute('max'));
                    if (value < max) {
                        input.value = value + 1;
                        this.closest('form').submit();
                    }
                });
            });
            
            document.querySelectorAll('.quantity-form input').forEach(function(input) {
                input.addEventListener('change', function() {
                    this.closest('form').submit();
                });
            });
        });
    </script>
{% endblock %}
